<Window x:Class="RPG.RIPWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RIP"  Height="300" Width="280" ResizeMode="NoResize">
    <Grid>
        <TextBlock Name="textBlockRIP" Margin="0,0,0,0" Padding="0,80,0,0" FontSize="18" TextAlignment="Center" FontStyle="Italic" Foreground="DarkSlateGray">
            <TextBlock.Background>
                <ImageBrush ImageSource="/templates/RIP.png" Stretch="Fill" />
            </TextBlock.Background>
        </TextBlock>
    </Grid>
</Window>
