<Window x:Class="RPG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RPGGAME" Height="350" Width="525" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="/templates/BACK.jpg"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <Button Content="New Game" Style="{DynamicResource TEXT}" Click="ButtonClickNewGame"  Margin="140,5,140,5" Grid.Row="1" FontStyle="Italic" FontSize="20" Foreground="DarkSlateGray"/>
        <Button Content="Old Game" Style="{DynamicResource TEXT}" Name="buttonOldGame" Click="ButtonClickOldGame" Margin="140,5,140,5" Grid.Row="2" FontStyle="Italic" FontSize="20" Foreground="DarkSlateGray"/>
        <Button Content="About" Style="{DynamicResource TEXT}" Click="ButtonClickAboutGame" Margin="140,5,140,5" Grid.Row="3" FontStyle="Italic" FontSize="20" Foreground="DarkSlateGray"/>
    </Grid>
</Window>
